<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox alignment="BASELINE_CENTER" prefHeight="520.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #dbdfff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teacherpaneljavafxjdbc.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label text="TeacherPanel">
      <font>
         <Font name="Comic Sans MS" size="48.0" />
      </font>
      <textFill>
         <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
            <stops>
               <Stop>
                  <color>
                     <Color />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="0.2264365553855896" blue="0.8199999928474426" />
                  </color>
               </Stop>
            </stops>
         </RadialGradient>
      </textFill>
   </Label>
   <Label text="Teacher groups" textFill="#4b259c">
      <font>
         <Font name="Comic Sans MS Bold" size="20.0" />
      </font>
   </Label>
  <Button onAction="#goToAddNewGroupWindow" prefHeight="26.0" prefWidth="194.0" text="ADD NEW GROUP">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>
   <Button onAction="#goToListOfGroupsWindow" prefHeight="26.0" prefWidth="194.0" text="LIST OF GROUPS">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
   <Label text="Teachers" textFill="#4b259c">
      <font>
         <Font name="Comic Sans MS Bold" size="20.0" />
      </font>
   </Label>
   <Button onAction="#goToAddNewTeacherWindow" prefHeight="26.0" prefWidth="194.0" text="ADD NEW TEACHER">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
   <Button onAction="#goToEditTeacherData" prefHeight="26.0" prefWidth="194.0" text="EDIT TEACHER DATA">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
   <Button onAction="#goToListWindow" prefHeight="26.0" prefWidth="194.0" text="LIST">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
   <Button onAction="#goToSearchWindow" prefHeight="26.0" prefWidth="194.0" text="SEARCH">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
   <Button onAction="#exitApplication" prefHeight="30.0" prefWidth="114.0" style="-fx-background-color: #626473;" text="EXIT" textFill="WHITE">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
</VBox>
